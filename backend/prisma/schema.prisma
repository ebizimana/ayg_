generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  tier      UserTier   @default(FREE)

  years     Year[]
  targetGpaSessions TargetGpaSession[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum UserTier {
  FREE
  PAID
}

model Year {
  id        String   @id @default(uuid())
  userId    String
  name      String
  startDate DateTime
  endDate   DateTime

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  semesters Semester[]
  targetGpaSessions TargetGpaSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([startDate])
}

model Semester {
  id        String   @id @default(uuid())
  yearId    String
  name      String
  startDate DateTime
  endDate   DateTime

  year      Year     @relation(fields: [yearId], references: [id], onDelete: Cascade)
  courses   Course[]
  targetGpaSessions TargetGpaSession[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([yearId])
}

model Course {
  id                 String        @id @default(uuid())
  semesterId         String
  code               String        @default("")
  name               String
  credits            Int
  desiredLetterGrade String
  gradingMethod      GradingMethod @default(WEIGHTED)
  gradingScaleId     String?
  actualLetterGrade  String?
  actualPercentGrade Float?
  actualPointsLeftToLose Int?
  gradeFinalizedAt   DateTime?
  isCompleted        Boolean       @default(false)
  sortOrder          Int           @default(0)
  isDemo             Boolean       @default(false)

  semester           Semester      @relation(fields: [semesterId], references: [id], onDelete: Cascade)
  gradingScale       GradingScale? @relation(fields: [gradingScaleId], references: [id], onDelete: SetNull)
  categories         GradeCategory[]
  targetGpaSnapshots TargetGpaSnapshot[]

  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  @@index([semesterId])
  @@index([gradingScaleId])
}

enum GradingMethod {
  WEIGHTED
  POINTS
}

enum TargetGpaScope {
  CAREER
  YEAR
  SEMESTER
}

model TargetGpaSession {
  id              String          @id @default(uuid())
  userId          String
  scope           TargetGpaScope
  targetGpa       Float
  yearId          String?
  semesterId      String?
  maxAchievableGpa Float?
  gpaShortfall    Float?
  createdAt       DateTime        @default(now())
  disabledAt      DateTime?

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  year            Year?           @relation(fields: [yearId], references: [id], onDelete: Cascade)
  semester        Semester?       @relation(fields: [semesterId], references: [id], onDelete: Cascade)
  snapshots       TargetGpaSnapshot[]

  @@index([userId])
  @@index([scope])
  @@index([yearId])
  @@index([semesterId])
}

model TargetGpaSnapshot {
  id                         String           @id @default(uuid())
  sessionId                  String
  courseId                   String
  previousDesiredLetterGrade String

  session                    TargetGpaSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  course                     Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([courseId])
}

model GradingScale {
  id     String @id @default(uuid())
  name   String

  aMin   Float
  bMin   Float
  cMin   Float
  dMin   Float

  courses Course[]
}

model GradeCategory {
  id            String   @id @default(uuid())
  courseId      String
  name          String
  weightPercent Float
  dropLowest    Int      @default(0)
  sortOrder     Int      @default(0)

  course        Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignments   Assignment[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([courseId])
}

model Assignment {
  id            String   @id @default(uuid())
  categoryId    String
  name          String
  maxPoints     Float
  dueDate       DateTime?
  isExtraCredit Boolean  @default(false)
  isGraded      Boolean  @default(false)
  sortOrder     Int      @default(0)

  category      GradeCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  grade         Grade?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([categoryId])
}

model Grade {
  id            String   @id @default(uuid())
  assignmentId  String   @unique

  expectedPoints Float?
  earnedPoints   Float?
  gradedAt       DateTime?
  notes          String?

  assignment     Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([assignmentId])
}
